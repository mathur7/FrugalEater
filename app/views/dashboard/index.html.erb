
<div class="container-fluid">
	<div class="row-fluid">
	<h1 class="dashboard-header"> Welcome to your dashboard, amigo! </h1>
		<div class="span-4 offset-4">
			<div class="border-form-div-1">
				<div id = "user_nav">
					<%= form_tag("/menuitems", method: "get") do %>
			  		<p><%= label_tag(:name, "What food item are you craving today?") %></p>
			  		<%= text_field_tag(:name) %><br></br>
					<%= submit_tag("Search", :class => "btn btn-primary search") %><br></br>
					<% end %>
					<% if @favorites.count > 0 %>
					<div class="fav">
						<%= button_to "View all favorites", { controller: :favorites, action: :index }, :method => :get, :class => "btn btn-default btn-md fav" %>
					</div>
					<% end %>
					<div id = "powered_by_locu_for_profile"><a href="http://locu.com"><img height="25" width="155" src="http://i.imgur.com/I2mkQba.png"></a></div>
				</div>
			</div>
		</div>
	</div>
</div>




		
		