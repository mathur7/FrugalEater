<br></br>
<div><%= flash[:errors] %></div>
<div class="border-form-div-1">
<div id = "user_nav">
<%= form_for(@search, url: "/favorites/search", method: "get") do |f| %>
<div class="input-group">
<%= f.text_field :q, class: 'form-control', placeholder: 'Search Your favorites' %>
<div class="input-group-btn">
<button class="btn btn-primary" type="submit">Search</button>
</div>
</div>
<% end %>
</div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Here's all the stuff you can eat, frugaleater!</div>
  <table class="table table-bordered">

    <thead>
    <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Restaurant</th>
    <th>Delete</th>
    </tr>
    </thead>

    <tbody>
    <tr> 

    <% @favorites.each do |favorite| %>
    <td><%= favorite[:name] %></td>
    <td><%= favorite[:price] %></td>
    <td><%= favorite[:restaurant] %></td>
    <td><%= link_to "Delete", favorite, :method => :delete, data: { confirm: "Are you sure you want to delete?"}, :class => "btn btn-danger" %></td>

    </tr>
    </tbody> 
    <% end %>
    </table> 
  </div> 

